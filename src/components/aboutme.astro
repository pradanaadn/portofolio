---
import { Image } from "astro:assets";
import me from "../../public/me.png";
import {getPath} from  "../utils.tsx";

const summary = `Results-driven Machine Learning Engineer with 1 year of hands-on experience in developing 
scalable AI solutions. Proficient in Python, TensorFlow, PyTorch, and system architecture. 
Proven track record in optimizing models for high performance and efficiency. 
Passionate about continuous learning and innovation.`;

const education = [
  {
    school: "Udayana University",
    degree: "Bachelor Of Engineering in Electrical and Computer Engineering",
    period: "2020 - 2024",
    gpa: "3.97/4.0",
  },
];
---

<section
  id="aboutme"
  class="py-12 border-t border-[#ffffff10] text-[var(--white)]"
>
  <div class="max-w-5xl mx-auto">
    <h2 class="text-lg text-[var(--sec)] mb-2 shiny-sec">About me</h2>
    <h3 class="text-4xl md:text-5xl font-medium mb-8">
      Putu Gede Pradana Adnyana
    </h3>
    <div class="flex flex-col md:flex-row gap-8 items-start">
      <div class="flex-1 space-y-6">
        <p class="text-lg text-[var(--white-icon)] leading-relaxed">
          {summary}
        </p>
        <div class="flex flex-col sm:flex-row gap-4">
          <a
            type="button"
            href={getPath("/pdf/latest_resume.pdf")}
            target="_blank"
            class="text-yellow-950 bg-yellow-500 hover:bg-[#FF9119]/80 focus:ring-4 focus:outline-none focus:ring-[#FF9119]/50 font-extrabold rounded-full text-sm px-5 py-2.5 text-center inline-flex items-center dark:hover:bg-[#FF9119]/80 dark:focus:ring-[#FF9119]/40 me-2 mb-2"
          >
            <!-- License: MIT. Made by michaelampr: https://github.com/michaelampr/jam -->
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="w-4 h-4 me-2 -ms-1"
              aria-hidden="true"
              focusable="false"
              role="img"
              ><path
                d="M3 0h10a3 3 0 0 1 3 3v14a3 3 0 0 1-3 3H3a3 3 0 0 1-3-3V3a3 3 0 0 1 3-3zm1 7a1 1 0 1 0 0 2h8a1 1 0 0 0 0-2H4zm0 8a1 1 0 0 0 0 2h5a1 1 0 0 0 0-2H4zM4 3a1 1 0 1 0 0 2h8a1 1 0 0 0 0-2H4zm0 8a1 1 0 0 0 0 2h8a1 1 0 0 0 0-2H4z"
              ></path></svg
            >
            Resume
          </a>
        </div>

        <div class="space-y-4">
          <h4 class="text-xl font-medium">Education</h4>
          <div class="space-y-4">
            {
              education.map((edu) => (
                <div class="bg-[#1414149c] rounded-xl p-4 border border-[#ffffff10]">
                  <h5 class="font-medium mb-1">{edu.school}</h5>
                  <p class="text-[var(--white-icon)] text-sm">{edu.degree}</p>
                  <div class="flex justify-between items-center mt-2 text-sm text-[var(--white-icon)]">
                    <span>{edu.period}</span>

                    <span class="rounded-md bg-yellow-500 px-2 py-1 text-xs font-extrabold text-yellow-950 ring-1 ring-yellow-600/20 ring-inset">
                      GPA: {edu.gpa}
                    </span>
                  </div>
                </div>
              ))
            }
          </div>
        </div>
      </div>

      <div class="w-full md:w-80 shrink-0">
        <div class="sticky top-8">
          <div
            class="aspect-square rounded-full overflow-hidden border-2 border-[var(--sec)]"
          >
            <Image
              src={me}
              alt="Putu Gede Pradana Adnyana"
              class="w-full h-full object-cover"
              width={320}
              height={320}
            />
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
