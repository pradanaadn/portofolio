---
import { Image } from "astro:assets";
import ProjectList, {Project} from "../React/ProjectList.tsx";
import svgl from "../../public/svgl.png";
import stockin from "../../public/stockin.png";
import moviesfordevs from "../../public/moviesfordevs.png";







const projects: Project[] = [
  {
    title: "Trash Object Detection",
    image: svgl as ImageMetadata,
    preview: "https://pitch.com/v/mangorenai-x6n96f",
    status: "Completed",
    description: "AI-powered waste detection and monitoring solution for waste management in Bandung",
    stack: ["Python", "Streamlit", "YOLOv8", "Alibaba Cloud", "OpenCV"],
    achievements: [
      "92% precision in waste classification",
      "Real-time monitoring dashboard",
      "Chatbot powered by Qwen-MAX"
    ]
  },
  {
    title: "UmMeals",
    image: stockin as ImageMetadata,
    preview: "https://linkedin.com/posts/pradanaadn_ummeals-deck",
    status: "Completed",
    description: "Maternal and Child Nutrition Tracking App with stunting detection",
    stack: ["Python", "SQLAlchemy", "Azure AI", "Power BI", "Streamlit"],
    achievements: [
      "Top 6 finalist Microsoft Innovation Challenge 2024",
      "Personalized nutrition monitoring",
      "Early stunting detection system"
    ]
  },
  {
    title: "Capstone Information System",
    image: moviesfordevs as ImageMetadata,
    link: "https://drive.google.com/file/d/1x37qvoekHEoIhrANusdd5onVDC--48Cn/view",
    status: "Completed",
    description: "Comprehensive information system with database architecture and user interface design",
    stack: ["Laravel", "PHP", "SQL", "Docker", "Bootstrap"],
    achievements: [
      "93% acceptance rate in functionality",
      "Complete ERD and UML design",
      "Agile development implementation"
    ]
  }
];
---

<section id="projects" class="py-12 border-t border-[#ffffff10] text-[var(--white)]">
  <div class="max-w-5xl mx-auto">
    <h2 class="text-lg text-[var(--sec)] mb-2 shiny-sec">Featured Projects</h2>
    <h3 class="text-4xl md:text-5xl font-medium mb-8">My Work</h3>
    <ProjectList projects={projects} />
  </div>
</section>